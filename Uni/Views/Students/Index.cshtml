@{
  Layout = "_Layout";
}
@using UniversityRegistrar.Models;
@model List<UniversityRegistrar.Models.Student>;

<h1>Students</h1>

@if (@ViewBag.SearchFlag == 1 && Model.Count == 0) 
{
  <h3>No search results found.</h3>
}
else if (@ViewBag.SearchFlag == 0 && Model.Count == 0)
{
  <h3>No students have been added yet!</h3>
}
<ul>
  @foreach (Student student in Model)
  {
    <li>@Html.ActionLink($"{student.StudentName}", "Details", new { id = student.StudentId })</li>
  }

  <p>Department:</p> @Html.ActionLink($"{Model.Department.DepartmentName}", "Details", "Departments", new{id = Model.DepartmentId})
</ul>
<p>@Html.ActionLink("Add new student", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>